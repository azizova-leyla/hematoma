<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th>Pool</th>
      <th>Order</th>
      <th>Red fighter</th>
      <th>Blue fighter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.pool_id %></td>
        <td><%= match.order %></td>
        <td><%= match.red_fighter_id %></td>
        <td><%= match.blue_fighter_id %></td>
        <td><%= link_to 'Show', match_path(tournament_id: @tournament.id, pool_id: @pool.id, id: match.id) %></td>
        <td><%= link_to 'Edit', edit_match_path(tournament_id: @tournament.id, pool_id: @pool.id, id: match.id) %></td>
        <td><%= link_to 'Destroy', match_path(tournament_id: @tournament.id, pool_id: @pool.id, id: match.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path(tournament_id: @tournament.id, pool_id: @pool.id) %>
